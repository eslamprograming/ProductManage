@model DAL.Entities.Product

<div class="container mt-5">
    <h2 class="text-center">Edit Product</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Category" />
        <input type="hidden" asp-for="CreatedByUserId" />
        <input type="hidden" asp-for="CreationDate" />
        <input type="hidden" asp-for="ImagePath" />

        <div class="form-group mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter product name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" required />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Duration" class="form-label"></label>
            <input asp-for="Duration" type="number" class="form-control" placeholder="Enter duration in days" required min="1" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        

        <div class="form-group mb-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-control" required>
                <option value="">-- Select Category --</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success px-5 py-2">Edit Product</button>
        </div>
        <br />
        <br />
        <br />
        <br />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
